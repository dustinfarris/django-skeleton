  header(role='banner')
    block header
      include _header
  
  #main(role='main')
    block content
  
  footer(role='contentinfo')
    block footer
      include _footer
  
  script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js')
